{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "safety-case-atlas-schema-1.0.0",
  "title": "Safety-Case Evidence Atlas Row",
  "type": "object",
  "required": [
    "claim_id",
    "governance_claim",
    "required_evidence",
    "governance_artifact_ids",
    "candidate_technical_methods",
    "known_failure_modes",
    "test_coverage_gaps",
    "atlas_version",
    "schema_version"
  ],
  "properties": {
    "claim_id": {
      "type": "string",
      "pattern": "^SC-\\d{2}$"
    },
    "governance_claim": {
      "type": "string",
      "minLength": 1
    },
    "required_evidence": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "governance_artifact_ids": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^S2-T3-\\d{2,3}$"
      },
      "minItems": 1
    },
    "candidate_technical_methods": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^T-EGM-\\d{3}$"
      },
      "minItems": 0
    },
    "known_failure_modes": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "test_coverage_gaps": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "notes": {
      "type": "string"
    },
    "atlas_version": {
      "type": "string"
    },
    "schema_version": {
      "type": "string"
    }
  },
  "additionalProperties": true
}