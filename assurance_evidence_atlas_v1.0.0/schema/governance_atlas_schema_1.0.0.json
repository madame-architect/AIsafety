{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "governance-atlas-schema-1.0.0",
  "title": "Tier-3 Governance Atlas Row",
  "type": "object",
  "required": [
    "id",
    "n",
    "raw_description",
    "issuer",
    "artifact_type",
    "assurance_function",
    "domain",
    "verification_strength",
    "atlas_version",
    "schema_version"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^S2-T3-\\d{2,3}$"
    },
    "n": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100
    },
    "raw_description": {
      "type": "string",
      "minLength": 1
    },
    "issuer": {
      "type": "string",
      "minLength": 1
    },
    "artifact_type": {
      "type": "string",
      "enum": [
        "standard",
        "profile",
        "law",
        "report"
      ]
    },
    "artifact_subtype": {
      "type": "string"
    },
    "assurance_function": {
      "type": "string",
      "enum": [
        "requirements",
        "evidence",
        "audit"
      ]
    },
    "domain": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "GPAI",
          "incidents",
          "compute",
          "evaluations"
        ]
      },
      "minItems": 1
    },
    "verification_strength": {
      "type": "string",
      "enum": [
        "self_attested",
        "independently_verifiable"
      ]
    },
    "verification_basis": {
      "type": "string",
      "enum": [
        "issuer_self_or_industry",
        "official_or_intergov",
        "research_org",
        "journalism"
      ]
    },
    "evidence_dependency": {
      "type": "string"
    },
    "bindingness": {
      "type": "string",
      "enum": [
        "binding",
        "voluntary",
        "draft"
      ]
    },
    "is_canonical": {
      "type": "boolean"
    },
    "is_secondary_pointer": {
      "type": "boolean"
    },
    "canonical_group_id": {
      "type": "string"
    },
    "dedupe_key": {
      "type": "string"
    },
    "source_file": {
      "type": "string"
    },
    "source_line": {
      "type": "integer",
      "minimum": 1
    },
    "tag_confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0
    },
    "atlas_version": {
      "type": "string"
    },
    "schema_version": {
      "type": "string"
    }
  },
  "additionalProperties": true
}