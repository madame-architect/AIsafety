{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "technical-bib-schema-1.0.0",
  "title": "Technical Bibliography Entry",
  "type": "object",
  "required": [
    "paper_id",
    "category",
    "title",
    "year",
    "topic_primary",
    "method_type",
    "atlas_version",
    "schema_version"
  ],
  "properties": {
    "paper_id": {
      "type": "string",
      "pattern": "^T-EGM-\\d{3}$"
    },
    "category": {
      "type": "string"
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "arxiv_id": {
      "type": [
        "string",
        "null"
      ],
      "pattern": "^\\d{4}\\.\\d{4,5}$"
    },
    "doi": {
      "type": [
        "string",
        "null"
      ]
    },
    "year": {
      "type": [
        "integer",
        "null"
      ],
      "minimum": 2000,
      "maximum": 2100
    },
    "citation_line": {
      "type": "string"
    },
    "annotation": {
      "type": [
        "string",
        "null"
      ]
    },
    "significance": {
      "type": [
        "string",
        "null"
      ]
    },
    "gaps": {
      "type": [
        "string",
        "null"
      ]
    },
    "topic_primary": {
      "type": "string",
      "enum": [
        "evaluation_gaming",
        "monitorability"
      ]
    },
    "threat_model_tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "method_type": {
      "type": "string",
      "enum": [
        "benchmark_or_suite",
        "probing_or_steering",
        "defense",
        "attack",
        "evaluation_protocol",
        "survey",
        "empirical_study"
      ]
    },
    "atlas_version": {
      "type": "string"
    },
    "schema_version": {
      "type": "string"
    }
  },
  "additionalProperties": true
}